<div id="itemAddCategory" popover>
    <div class="main">
            <div class="main-card">
                    <div class="sup_header">
                        <div class="left-sup">
                            <h2>Add Category</h2>
                        </div>
                    </div>
                    <hr>
                    <form action="/inventory/add_category" method="post">
                        <div class="form-group">
                            <label for="customer_name">Category Name <span>*</span></label>
                            <input type="text" name="name" id="name" required value="">
                        </div>
                        <div class="form-group">
                            <label for="item">Description <span>*</span></label>
                             <textarea name="desc" id="desc" rows="10"></textarea>
                        </div>
                        <div class="form-group"><button type="submit" id="itemUpdateBtn">Submit</button></div>
                    </form>
            </div>
    </div>
</div>